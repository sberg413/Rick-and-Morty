<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/character_list_dest">

    <fragment
        android:id="@+id/character_list_dest"
        android:name="com.sberg413.rickandmorty.ui.main.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_detailActivity"
            app:destination="@id/character_detail_dest" />
        <argument
            android:name="characterId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <activity
        android:id="@+id/character_detail_dest"
        android:name="com.sberg413.rickandmorty.ui.detail.DetailActivity"
        android:label="DetailActivity" />
</navigation>